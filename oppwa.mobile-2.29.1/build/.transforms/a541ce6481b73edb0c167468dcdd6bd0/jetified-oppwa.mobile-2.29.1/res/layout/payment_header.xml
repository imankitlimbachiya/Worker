<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/headerBackground"
    android:paddingLeft="10dp"
    android:paddingTop="12dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/close_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/cancelButtonDrawable"
        android:contentDescription="@string/content_description"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.oppwa.mobile.connect.checkout.dialog.view.CheckoutTextView
        android:id="@+id/title"
        android:text="@string/checkout_layout_text_select_payment_method"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/close_button"
        android:layout_toStartOf="@id/close_button"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/checkoutTitleTextViewStyle"/>

</RelativeLayout>