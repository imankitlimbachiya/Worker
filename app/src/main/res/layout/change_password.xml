<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/bg_layout_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.worker.app.utility.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change__password"
                    android:textSize="@dimen/_17sdp"
                    android:textColor="@color/black"
                    app:font_regular="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_40sdp"/>

                <com.worker.app.utility.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/you_want_to_change_your_password_enter_valid_detail"
                    android:textColor="@color/black"
                    app:font_regular="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_15sdp"/>

                <com.worker.app.utility.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old_password"
                    android:textColor="#323232"
                    app:font_semibold="true"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <com.worker.app.utility.MyEditText
                    android:id="@+id/edt_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_bg_selector_black"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textCursorDrawable="@drawable/color_cursor_normal" />

                <com.worker.app.utility.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_password"
                    android:textColor="#323232"
                    app:font_semibold="true"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <com.worker.app.utility.MyEditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_bg_selector_black"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textCursorDrawable="@drawable/color_cursor_normal" />

                <com.worker.app.utility.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_password"
                    android:textColor="#323232"
                    app:font_semibold="true"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <com.worker.app.utility.MyEditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edt_bg_selector_black"
                    android:imeOptions="actionDone|actionGo"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#323232"
                    android:textCursorDrawable="@drawable/color_cursor_normal" />

                <com.worker.app.utility.MyButton
                    android:id="@+id/btnChangePassword"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/PrimaryColoredButton"
                    android:text="@string/change_password"
                    app:font_semibold="true" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgCloseDialog"
                android:src="@drawable/ic_close_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_10sdp"/>
            <!--<ImageView
                android:id="@+id/imgCloseDialog"
                android:src="@drawable/ic_close_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_10sdp"/>-->

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout"
        android:backgroundTint="@android:color/white"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_launch"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
