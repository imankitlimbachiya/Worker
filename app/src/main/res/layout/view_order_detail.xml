<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical"
                android:background="@color/bgListMyworker">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_worker"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:alpha="0.2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/workers_name"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mary Jhon XXXX"
                                app:font_semibold="true"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/contract_fees"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <com.worker.app.utility.MyTextView
                                    android:id="@+id/txt_contractFees"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18,0000"
                                    app:font_semibold="true"
                                    android:textColor="@color/colorGreyDiscount"
                                    android:textSize="@dimen/_10sdp"/>
                                <com.worker.app.utility.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/_3sdp"
                                    android:text="SAR"
                                    android:textColor="@color/colorGreyDiscount"
                                    android:textSize="@dimen/_8sdp"
                                    app:font_semibold="true" />
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/order_id"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp"/>

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_orderId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="565456"
                                app:font_semibold="true"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/status"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Completed"
                                app:font_semibold="true"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/timeline"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_timeline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="45 Days"
                                app:font_semibold="true"
                                android:layout_weight="1"
                                android:textColor="@color/colorGreyDiscount"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/Simpleprogress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:progress="50"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:progressDrawable="@drawable/progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
