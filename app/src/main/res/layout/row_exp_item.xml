<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.worker.app.utility.MyTextView
                android:id="@+id/txtJobTitle"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/txtExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="job title"
                android:textColor="@color/colorTextColor"
                android:textSize="@dimen/_12sdp"
                app:font_semibold="true" />

            <com.worker.app.utility.MyTextView
                android:id="@+id/txtCompanyName"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:text="Company name"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtJobTitle"
                android:textColor="@color/notificationDescColor"
                android:textSize="@dimen/_10sdp" />

            <com.worker.app.utility.MyTextView
                android:id="@+id/txtDepartmnet"
                android:layout_width="wrap_content"
                android:text="Management"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCompanyName"
                android:textColor="@color/notificationDescColor"
                android:textSize="@dimen/_10sdp" />

            <com.worker.app.utility.MyTextView
                android:id="@+id/txtExp"
                android:layout_width="wrap_content"
                android:text="5 years"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:textColor="@color/notificationDescColor"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

    <!--<View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@color/divider" />-->
</LinearLayout>
