<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="searchViewStyle">@style/SearchViewMy</item>
    </style>

    <declare-styleable name="MyTextView">
        <attr name="font_light" format="boolean" />
        <attr name="font_regular" format="boolean" />
        <attr name="font_semibold" format="boolean" />
        <attr name="font_bold" format="boolean" />
        <attr name="font_italic" format="boolean" />
    </declare-styleable>

    <style name="PrimaryColoredButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_buton</item>
        <item name="android:layout_width">@dimen/_120sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextBigBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTitleGrey</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="TitleTextSmallGrey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coloSubGrey</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">@dimen/_20sdp</item>
        <item name="android:dropDownVerticalOffset">@dimen/_20sdp</item>
    </style>


    <style name="positive" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>

    <style name="negative" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>

</resources>
