<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <com.worker.app.utility.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/view_request_details"
                android:textColor="@color/colorTextColor"
                android:textSize="@dimen/_17sdp"
                app:font_semibold="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/requst_id"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_request_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/requst_date"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_request_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="center_vertical|right" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/country"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/gender"
                                android:textColor="@color/colorTextColor"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/tv_Gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"
                                android:gravity="center_vertical|right" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/age_range"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_ageRange"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="center_vertical|right" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_categories"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_totalCat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="center_vertical|right"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/option_menu_icon"
                    android:backgroundTint="@color/txt_color"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/grey_400" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>
