<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_option"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/option_menu_icon"
                android:backgroundTint="@color/txt_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/requst_id"
                                android:textColor="@color/colorTextColor"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"
                                android:gravity="right"/>

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/tv_request_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123456"
                                android:layout_weight="1"
                                app:font_semibold="true"
                                android:gravity="center_vertical|right"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/requst_date"
                                android:textColor="@color/colorTextColor"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"/>

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/tv_request_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="25/05/2019"
                                app:font_semibold="true"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/nationality"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_nationality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Philippines"
                            app:font_semibold="true"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="@string/category"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            app:font_semibold="true"
                            android:text="Medical stuff, Sport staff, Spa staff"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/requested_workers"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_requestedWorkers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="16"
                            app:font_semibold="true"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="right"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.worker.app.utility.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/totalmatchingworkers"
                        android:textColor="@color/colorTextColor"
                        android:textSize="@dimen/_12sdp"
                        app:font_semibold="true"
                        android:gravity="right"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_matchingWorkers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="36"
                            app:font_semibold="true"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="right"/>

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txt_tab_to_view"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/button_grey"
                            android:gravity="center"
                            android:text="@string/tab_to_view"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.worker.app.utility.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status"
                        android:textColor="@color/colorTextColor"
                        android:textSize="@dimen/_12sdp"
                        app:font_semibold="true"
                        android:gravity="right"/>

                    <com.worker.app.utility.MyTextView
                        android:id="@+id/tv_status"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/bg_green_txt_border"
                        android:gravity="center"
                        android:text="@string/inprogress"
                        android:textColor="@color/textgreen"
                        android:textSize="@dimen/_12sdp"
                        app:font_semibold="true" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <com.worker.app.utility.MyButton
                    android:id="@+id/view_request"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    style="@style/PrimaryColoredButton"
                    android:background="@drawable/button_blue"
                    android:textColor="@color/colorTextColor"
                    android:text="@string/viewrequest"
                    app:font_semibold="true"
                    android:layout_marginBottom="@dimen/_10sdp"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
