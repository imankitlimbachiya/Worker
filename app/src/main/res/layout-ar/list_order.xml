<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_remove"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/option_menu_icon"
                android:backgroundTint="@color/txt_color"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/order_id"
                                android:textColor="@color/colorTextColor"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"
                                android:gravity="right"/>

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/request_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="123456"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"
                                android:paddingRight="@dimen/_3sdp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/order_date"
                                android:textColor="@color/colorTextColor"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"
                                android:gravity="right" />

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/request_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="25/05/2019"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true"
                                android:paddingRight="@dimen/_3sdp"
                                android:gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/nationality"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txt_nationality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Philippines"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"
                            android:paddingRight="@dimen/_3sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="@string/category"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txt_categoryName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="Medical stuff, Sport staff, Spa staff"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:paddingRight="@dimen/_3sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/requested_workers"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txt_request_Workers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12"
                            android:gravity="right"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:paddingRight="@dimen/_3sdp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/total_contract_fees"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_contract_fees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="39,000"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_3sdp"
                                android:text="SAR"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:font_semibold="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/add_ons_services"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_add_services"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="650"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_3sdp"
                                android:text="SAR"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:font_semibold="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/discount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_3sdp"
                                android:text="SAR"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:font_semibold="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/wallet_amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00.0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_3sdp"
                                android:text="SAR"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:font_semibold="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/vat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_tax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1982.5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_3sdp"
                                android:text="SAR"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:font_semibold="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:gravity="right"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txt_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity=""
                                android:text="41632.5 "
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:font_semibold="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_3sdp"
                                android:text="SAR"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_8sdp"
                                app:font_semibold="true" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/status"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorTextColor"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1">

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/bg_green_txt_border"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/textgreen"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/grey_400" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_invoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/pdf_icon" />

                        <com.worker.app.utility.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/download_invoice"
                            android:textSize="@dimen/_11sdp"
                            app:font_semibold="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_contract"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/pdf_icon" />

                        <com.worker.app.utility.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/download_contract"
                            android:textSize="@dimen/_11sdp"
                            app:font_semibold="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
