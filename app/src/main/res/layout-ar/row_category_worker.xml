<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgWorker"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.7">

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txtWorkerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marya Johny"
                            android:singleLine="true"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp"
                            app:font_semibold="true"/>

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txtWorkerCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtWorkerName"
                            android:text="Philippines"
                            android:singleLine="true"
                            android:textColor="@color/colorGreyDiscount"
                            android:textSize="@dimen/_12sdp"
                            app:font_regular="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <com.worker.app.utility.MyTextView
                            app:font_regular="true"
                            android:id="@+id/txtWLabelFees"
                            android:text="@string/contract_fees"
                            android:textSize="@dimen/_9sdp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/colorGreyDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                android:id="@+id/txtWorkerContractFees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtWLabelFees"
                                android:layout_alignParentEnd="true"
                                android:text="21000"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_12sdp"
                                app:font_regular="true" />

                            <com.worker.app.utility.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtWLabelFees"
                                android:layout_alignParentEnd="true"
                                android:text="@string/sar"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_10sdp"
                                app:font_regular="true"
                                android:layout_marginRight="@dimen/_3sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.85"
                        android:layout_height="wrap_content">

                        <com.worker.app.utility.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/religon"
                            android:textColor="@color/colorGreyDiscount"
                            android:textSize="@dimen/_9sdp"
                            app:font_regular="true" />

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txtWorkerReligion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Hendosi"
                            android:singleLine="true"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/colorBlack"
                            app:font_regular="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.worker.app.utility.MyTextView
                            app:font_regular="true"
                            android:id="@+id/txtWLabelAge"
                            android:text="@string/age"
                            android:layout_above="@+id/txtWorkerReligion"
                            android:textColor="@color/colorGreyDiscount"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_9sdp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                app:font_regular="true"
                                android:id="@+id/txtWorkerAge"
                                android:text="30"
                                android:textSize="@dimen/_12sdp"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.79"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <com.worker.app.utility.MyTextView
                            android:id="@+id/txtWLabelSalary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtWorkerReligion"
                            android:text="@string/monthly_salary"
                            android:textColor="@color/colorGreyDiscount"
                            android:textSize="@dimen/_9sdp"
                            app:font_regular="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.worker.app.utility.MyTextView
                                app:font_regular="true"
                                android:id="@+id/txtWorkerMSalary"
                                android:text=" 5000 "
                                android:singleLine="true"
                                android:textSize="@dimen/_12sdp"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.worker.app.utility.MyTextView
                                app:font_regular="true"
                                android:text="@string/sar"
                                android:singleLine="true"
                                android:textSize="@dimen/_10sdp"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_3sdp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp">

                <com.worker.app.utility.MyTextView
                    android:id="@+id/txtViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_grey_border_rect_purple"
                    android:gravity="center"
                    android:singleLine="true"
                    android:padding="@dimen/_6sdp"
                    android:text="@string/view_profile"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp">

                <com.worker.app.utility.MyTextView
                    android:id="@+id/txtProfession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey_border_rect_purple"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/_9sdp"
                    android:padding="@dimen/_6sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp">

                <com.worker.app.utility.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_grey_border_rect_purple"
                    android:text="@string/hire_now"
                    android:id="@+id/txtHireNow"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_9sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>